  <section class="head pb-5">
    <div class="container py-5">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12 col-12">
              <div class="row pt-3">
                <div class="col-lg-1 offset-1 col-md-2 col-sm-2 col-2">
                  <span style="font-size: 30px; color: cadetblue;"><i class="fa-solid fa-location-pin"></i></span>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-9 col-9">
                  <h3 class="font-weight-light">Find Us at office</h3>
                  <p>Snunit 51, Karmiel, Israel.</p>
                </div>
              </div>
              <div class="row pt-3">
                <div class="col-lg-1 offset-1 col-md-2 col-sm-2 col-2">
                  <span style="font-size: 30px; color: cadetblue"><i class="fa-solid fa-phone"></i></span>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-9 col-9">
                  <h3 class="font-weight-light">Call Us now</h3>
                  <p>David Nashash +972 546807433.</p>
                  <p>Bradley Feitsvaig +972 528562753.</p>
                </div>
              </div>
              <div class="row pt-3">
                <div class="col-lg-1 offset-1 col-md-2 col-sm-2 col-2">
                  <span style="font-size: 30px; color: cadetblue"><i class="fa-solid fa-envelope-open-text"></i></span>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-9 col-9">
                  <h3 class="font-weight-light">E-Mailing Address</h3>
                  <p>tree.electronics.awsom@hotmail.com</p>
                </div>
              </div>
              <div class="row pt-3">
                <div class="col-lg-1 offset-1 col-md-2 col-sm-2 col-2">
                  <span style="font-size: 30px; color: cadetblue"><i class="fa-solid fa-clock"></i></span>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-9 col-9">
                  <h3 class="font-weight-light">Working Hours</h3>
                  <p>8am-5pm.</p>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 col-12">
              <form id="contactUs-form" action="/contact-us-page" method="POST"m>
                <div class="col-lg-7">
                  <h1 class="font-weight-light text-center py-3">Contact Us</h1>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <input type="text" placeholder="Name*" id="name" name="name" class="form-control my-3" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <input type="email" placeholder="Email*" name="email" id ="email" class="form-control my-3" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <select class="form-select my-3" placeholder="Subject" name="subject" id ="subject" required>
                      <option value="" disabled selected hidden>Subject*</option>
                      <option>account</option>
                      <option>payments</option>
                      <option>products</option>
                      <option>shipping</option>
                      <option>other</option>
                    </select>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <textarea class="form-control" placeholder="Message*" name="msgfield" id ="msgfield" rows="3" required></textarea>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <input type="submit" name="contactUsBtn" id ="contactUsBtn" class="submitButton mt-3 mb-5">Submit</button>
                  </div>
                </div>
                <div class="form-row-contact">
                  <div class="row">
                    <div class="col-lg-1 col-md-2 col-sm-2 col-2">
                      <span style="font-size: 40px; color: cadetblue"><i class="fa-solid fa-phone"></i></span>
                    </div>
                    <div class="col-lg-7">
                      <h3 class="font-weight-light">NEED 24/7 SUPPORT</h3>
                      <button type="button" class="supportButton mb-5">CONTACT SUPPORT</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
